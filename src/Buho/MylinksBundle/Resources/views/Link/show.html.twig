{% extends 'BuhoMylinksBundle::layout.html.twig' %}

{% block header_title %}{{ link.description }}{% endblock header_title %}

{% block center %}
    <article class="link">
        <header>
            <div class="date"><time datetime="{{ link.created|date('c') }}">{{ link.created|date('l, F j, Y') }}</time></div>
            <h3><a href="{{ link.uri }}" target="_blank">{{ link.title }}</a></h3>
        </header>
        <div class="link-description">
            <p>{{ link.description }}</p>
        </div>
    </article>
    <section class="comments" id="comments">
        <section class="previous-comments">
            <h3>Comments</h3>
            {% include 'BuhoMylinksBundle:Comment:index.html.twig' with { 'comments': comments } %}
        </section>
        <h3>Add Comment</h3>
        {% render controller('BuhoMylinksBundle:Comment:new', { 'link_id': link.id }) %}
    </section>
{% endblock center %}